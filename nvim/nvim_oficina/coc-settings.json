{
  // Configuraciones generales
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "php",
    "python",
    "html",
    "jinja"
  ],
  "coc.preferences.diagnostic.enable": true,
  "coc.preferences.snippetSuggestions": "inline",
  "coc.preferences.autoTrigger": "enable",

  // Configuraci贸n del lenguaje SQL
  "languageserver": {
    "sql": {
      "command": "sqls",
      "args": ["-config", "$HOME/.config/sqls/config.yml"],
      "filetypes": ["sql"],
      "shell": true
    }
  },

  // Configuraci贸n de Copilot
  "copilot.enable": true,
  "copilot.autoTrigger": true,
  "copilot.suggestionDelay": 50,
  "copilot.acceptSuggestionOnEnter": true,

  // Configuraci贸n de Rust (rust-analyzer)
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.updates.checkOnStartup": false,
  "rust-analyzer.updates.channel": "stable",
  "rust-analyzer.hover.documentation.enable": true,

  // Configuraci贸n de Python
  "python.linting.enabled": false,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "off",
  "diagnostic.virtualText": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.parameterNames.enabled": false,
  "python.analysis.inlayHints.parameterTypes": false
}
