{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "php",
    "python",
    "html",
    "jinja"
  ],
  "languageserver": {
    "sql": {
      "command": "sqls",
      "args": ["-config", "$HOME/.config/sqls/config.yml"],
      "filetypes": ["sql"],
      "shell": true
    }
  },
  "copilot.enable": true,
  "copilot.autoTrigger": true,
  "copilot.suggestionDelay": 50,
  "copilot.acceptSuggestionOnEnter": true
}
